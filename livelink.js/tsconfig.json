{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "types": ["@types/webxr"],
    "stripInternal": true
  },

  "exclude": ["./dist/**/*", "./tests/*", "./ci/**"]
}
