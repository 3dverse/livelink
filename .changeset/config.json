{
  "$schema": "https://cdn.3dverse.com/assets/changeset-config-schema.json",
  "changelog": "@changesets/cli/changelog",
  "commit": true,
  "fixed": [],
  "linked": [],
  "access": "public",
  "baseBranch": "release",
  "updateInternalDependencies": "patch",
  "bumpVersionsWithWorkspaceProtocolOnly": true,
  "ignore": ["livelink.samples"],

  "conventionalCommits": {
    "releaseRules": [
      { "breaking": true, "release": "minor" },
      { "revert": true, "release": "patch" },
      { "type": "feat", "release": "patch" },
      { "type": "feature", "release": "patch" },
      { "type": "fix", "release": "patch" },
      { "type": "perf", "release": "patch" },
      { "type": "revert", "release": "patch" },
      { "type": "docs", "release": "patch" },
      { "type": "chore", "release": "patch" },
      { "type": "refactor", "release": "patch" },
      { "type": "style", "release": "skip" },
      { "type": "test", "release": "skip" },
      { "type": "build", "release": "skip" },
      { "type": "ci", "release": "skip" }
    ]
  }
}
